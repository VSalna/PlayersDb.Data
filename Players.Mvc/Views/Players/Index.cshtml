@model IndexViewModel
@{
    ViewData["Title"] = "Players";
}

<a asp-action="Create" class="btn btn-primary btn-sm" role="button"><i class="fas fa-plus"></i></a>
<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Name</th>
            <th scope="col">Surname</th>
            <th scope="col">Points</th>
            <th scope="col">&nbsp;</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var player in Model.Players)
        {
            <tr>
                <th scope="row">@player.Id</th>
                <td>@player.Name</td>
                <td>@player.Surname</td>
                <td>@player.Points</td>
                <td>
                    @if (Model.ShowConfirm && player.Id == Model.ItemToDeleteId)
                    {
                        <div class="alert alert-danger" role="alert">
                            Do you really want to delete?
                            <a asp-action="Delete" asp-route-id="@Model.ItemToDeleteId" class="btn btn-success btn-sm" role="button"><i class="fas fa-check"></i></a>
                            <a asp-action="DeleteConfirmation" class="btn btn-light"><i class="fas fa-trash"></i></a>
                        </div>
                    }
                    else
                    {
                        <a asp-action="Details" asp-route-id="@player.Id" class="btn btn-primary btn-sm" role="button"><i class="fas fa-pencil-alt"></i></a>
                        <a asp-action="DeleteConfirmation" asp-route-id="@player.Id" class="btn btn-danger"><i class="fas fa-trash"></i></a>
                    }



                </td>
            </tr>
        }
    </tbody>
</table>

